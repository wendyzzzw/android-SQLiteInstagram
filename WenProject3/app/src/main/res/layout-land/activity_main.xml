<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="23sp"
    android:paddingRight="23sp"
    android:background="#e2e0e0">

    <LinearLayout
        android:id="@+id/ll_log_in"
        android:paddingLeft="38sp"
        android:paddingRight="38sp"
        android:paddingBottom="10sp"
        android:paddingTop="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFF"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_marginTop="35dp">

        <ImageView
            android:id="@+id/main_insta"
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:src="@drawable/instagram"/>

        <EditText
            android:id="@+id/main_username"
            android:paddingLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="37sp"
            android:hint="Username"
            style="@style/LogInETStyle"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="9sp" />

        <EditText
            android:id="@+id/main_password"
            android:paddingLeft="20sp"
            android:layout_width="match_parent"
            android:layout_height="37sp"
            android:hint="Password"
            style="@style/LogInETStyle"
            android:inputType="textPassword"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="12sp" />
        <Button
            android:id="@+id/main_log_in"
            android:layout_width="match_parent"
            android:layout_height="37sp"
            android:text="@string/log_in"
            style="@style/LogInButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:orientation="horizontal"
        android:background="#FFF"
        android:gravity="center"
        android:layout_below="@+id/ll_log_in"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <TextView
            android:paddingRight="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/main_signup"
            android:layout_width="55sp"
            android:layout_height="15sp"
            android:text="Sign up"
            android:background="#FFF"
            android:textColor="#3974da"/>

    </LinearLayout>

</RelativeLayout>