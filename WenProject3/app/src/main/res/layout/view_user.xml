<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12sp"
    android:paddingLeft="10sp"
    android:background="#FFF">

    <project3.wenproject3.image.RoundImageView
        android:id="@+id/view_user_profilepic"
        android:layout_width="38sp"
        android:layout_height="38sp"
        android:src="@drawable/user" />

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="44sp"
        android:background="@drawable/border_bot">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/view_user_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:hint="wzhou"
                android:textColor="#000"
                android:textStyle="bold"
                android:textColorHint="#000"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/view_user_fullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:hint="Wen Zhou"
                android:textSize="15sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/view_user_follow"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="27sp"
            android:text="@string/follow"
            android:background="@drawable/button_style3"
            android:textColor="#3969da"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>