<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.UserProfileFragment"
    android:orientation="vertical"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10sp"
        android:paddingRight="15sp"
        android:paddingLeft="15sp">

        <project3.wenproject3.image.RoundImageView
            android:id="@+id/up_pic"
            android:layout_width="85sp"
            android:layout_height="85sp"
            android:src="@drawable/user"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/up_posts"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:hint="23"
                        android:gravity="center_horizontal"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="posts"
                        android:gravity="center_horizontal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/up_followers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:hint="123"
                        android:gravity="center_horizontal"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="followers"
                        android:gravity="center_horizontal"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/up_following"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:hint="123"
                        android:gravity="center_horizontal"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="19sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="following"
                        android:gravity="center_horizontal"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="8sp" />

            <TextView
                android:id="@+id/up_edit_profile"
                android:gravity="center"
                android:background="@drawable/button_style2"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:text="Edit Profile"
                android:textColor="#000"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:id="@+id/up_full_name"
        android:paddingLeft="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:hint="Wen Zhou"
        android:textColor="#000"
        android:textColorHint="#000"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <LinearLayout
        android:paddingTop="1sp"
        android:paddingBottom="1sp"
        android:layout_width="match_parent"
        android:layout_height="34sp"
        android:orientation="horizontal"
        android:background="@drawable/border">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#FFF"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#FFF"/>

        <ImageButton
            android:id="@+id/up_grid"
            android:paddingTop="10sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/grid_full"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#FFF"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#FFF"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/up_recycler_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>


</LinearLayout>
