<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="LogInTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:editTextStyle">@style/LogInETStyle</item>
        <item name="android:textViewStyle">@style/LogInTVStyle</item>
        <item name="android:windowNoTitle">false</item>
    </style>

    <style name="LogInETStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/border_full</item>
    </style>

    <style name="LogInButtonStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_style</item>
    </style>

    <style name="LogInTVStyle">
        <item name="android:textColor">#000000</item>
    </style>

</resources>
